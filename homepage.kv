MDScreen:
    name : "homepage"
    md_bg_color : 202/255, 150/255, 92/255, .7

    GridLayout:
        id : grid
        cols : 1

        MDTopAppBar:
            title: "F&M Store"
            pos_hint : {"center_x" : .5, "center_y" : .87}
            elevation: 10
            size_hint : 1, .13
            md_bg_color : 0, 0, 0, 1
            pos: self.pos
            left_action_items: [['menu', lambda a: navDraw.set_state("open")]]
            right_action_items : [["magnify"], ["cart", lambda a : app.open_product()]]

        ScrollView:
            id : scroll
            do_scroll_x : False
            do_scroll_y : True
            size : self.size
            GridLayout:
                id : grid

                size_hint : 1, None
                height : scroll.height * 1.5
                cols : 1
                Carousel:
                    id : carousel
                    loop : True
                    size_hint : 1, 0.6

                    MDFloatLayout:
                        FitImage:
                            size : self.size
                            pos : self.pos
                            source : "images/ad1.jpg"
                    MDFloatLayout:
                        FitImage:
                            size : self.size
                            pos : self.pos
                            source : "images/ad2.jpg"
                    MDFloatLayout:
                        FitImage:
                            size : self.size
                            pos : self.pos
                            source : "images/ad3.jpg"

                MDLabel:
                    text : "Check out our products!"
                    font_size : "25sp"
                    font_name : "fonts/Poppins-SemiBold.ttf"
                    halign : "center"
                    size_hint : 1, None
                    height : "50dp"

                GridLayout:
                    cols : 2
                    size_hint : 1, .1
                    MDRaisedButton:
                        text : "Hijabs"
                        font_size : "20sp"
                        font_name : "fonts/Poppins-Bold.ttf"
                        size_hint : .32, .55
                        md_bg_color : 233/255, 119/255, 119/255, 1
                        on_press : carousel2.load_previous()
                        pos_hint : {"center_x" : .25, "center_y" : .57}
                    MDRaisedButton:
                        text : "Abayas"
                        font_size : "20sp"
                        font_name : "fonts/Poppins-Bold.ttf"
                        size_hint : .32, .55
                        md_bg_color : 66/255, 33/255, 44/255, 1
                        on_press : carousel2.load_next()
                        pos_hint : {"center_x" : .7, "center_y" : .57}

                ScrollView:
                    id : scroll2

                    do_scroll_x : False
                    do_scroll_y : True
                    size : self.size
                    Carousel:
                        id : carousel2
                        size_hint : 1, None
                        height : scroll2.height
                        GridLayout:
                            id : hijab_layout
                            cols : 1
                            padding : 12
                            spacing : [0, 10]

                        GridLayout:
                            id : abaya_layout
                            cols : 1
                            padding : 12
                            spacing : [0, 10]


                MDCard:
                    size_hint : 1, .2
                    md_bg_color : 0, 0, 0, .1
                    MDFloatLayout:
                        MDTextButton:
                            text : "An app by TrubberDox"
                            font_name : "fonts/Poppins-Bold.ttf"
                            font_size : "20sp"
                            halign : "center"
                            theme_text_color : "Custom"
                            text_color : "white"
                            pos_hint : {"center_x" : .5, "center_y" : .5}
                            on_press : root.manager.current = "admin"

    MDNavigationDrawer:
        id : navDraw
        orientation : "vertical"
        ScrollView:
            GridLayout:
                cols : 1
                spacing : 10
                padding : 10
                MDLabel:
                    text : "Advanced Settings"
                    font_size : "20sp"
                    halign : "center"
                    font_name : "fonts/Poppins-SemiBold.ttf"
                    size_hint_y : None
                    height : "50dp"

                AnchorLayout:
                    anchor : "center"
                    size_hint_y : None
                    height : "170dp"
                    FitImage:
                        size_hint : None, None
                        size : (170, 170)
                        source : "images/10.png"

                MDLabel:
                    text : "The best place for modest clothing"
                    font_size : "12sp"
                    halign : "center"
                    font_name : "fonts/Poppins-SemiBold.ttf"
                    size_hint_y : None
                    height : self.texture_size[1]

                MDList:
                    OneLineAvatarListItem:
                        text : "Terms & Service"
                        IconLeftWidget:
                            icon : "clipboard-account"
                    OneLineAvatarListItem:
                        text : "Account"
                        IconLeftWidget:
                            icon : "account"
                    OneLineAvatarListItem:
                        text : "About Us"
                        IconLeftWidget:
                            icon : "information"
                    OneLineAvatarListItem:
                        text : "Log Out"
                        on_press: root.manager.current = "login"
                        IconLeftWidget:
                            icon : "door"



