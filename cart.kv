MDScreen:
    name : "cart"
    md_bg_color : 202/255, 150/255, 92/255, .7

    canvas.before:
        Color:
            rgba : 1, 1, 1, .4
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/6.jpg"

    MDIconButton:
        icon : "arrow-left-bold"
        theme_text_color : "Custom"
        user_font_size : "30sp"
        text_color : "white"
        pos_hint : {"center_x" : .1, "center_y" : .92}
        theme_text_color : "Custom"
        text_color : 0, 0, 0, 1
        on_press : root.manager.current = "homepage"

    MDLabel:
        text : "Back"
        font_size : "25sp"
        theme_text_color : "Custom"
        text_color : 1, 1, 1, 1
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        text_color : 0, 0, 0, 1
        halign : "center"
        pos_hint : {"center_x" : .21, "center_y" : .922}

    MDLabel:
        text : "Cart"
        font_size : "30sp"
        theme_text_color : "Custom"
        text_color : 0, 0, 0, 1
        font_name : "fonts/Poppins-SemiBold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .75, "center_y" : .922}

    MDLabel:
        text : "Your Items"
        font_size : "20sp"
        theme_text_color : "Custom"
        text_color : 0, 0, 0, 1
        font_name : "fonts/Poppins-SemiBold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .2, "center_y" : .8}

    MDCard:
        size_hint : .78, .5
        pos_hint : {"center_x" : .5, "center_y" : .5}

        ScrollView:
            id : scroll
            do_scroll_x : False
            do_scroll_y : True
            GridLayout:
                id : grid
                size_hint : 1, None
                height: self.minimum_height
                pos : self.pos
                cols : 1
                MDList:
                    id : list
                    md_bg_color : 1, 1, 1, 1

    MDLabel:
        id : price
        text : "Total : 4999/-"
        halign : "center"
        pos_hint : {"center_x" : .65, "center_y" : .2}
        font_size : "30sp"
        font_name : "fonts/Poppins-Bold.ttf"

    MDRoundFlatButton:
        md_bg_color : 0, 0, 0, .8
        text : "Proceed to Checkout"
        font_size : "15sp"
        font_name : "fonts/Poppins-SemiBold.ttf"
        size_hint : .5, .1
        pos_hint : {"center_x": .5, "center_y" : .1}
        on_press : root.manager.current = "confirm_order"

