MDScreen:
    name : "done"
    md_bg_color : 1, 1, 1, .3

    canvas:
        Color:
            rgba : 1, 1, 1, .3
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/9.jpg"

    MDLabel:
        text : "Thank you for purchasing from Trubber's Stash!"
        font_name : "fonts/Poppins-Bold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .5, "center_y" : .6}
        font_size : "25sp"

    MDLabel:
        text : "Please check your E-Mail for more info."
        font_name : "fonts/Poppins-SemiBold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .5, "center_y" : .5}
        font_size : "15sp"

    MDRaisedButton:
        text : "Back to Homepage"
        size_hint : .4, .09
        pos_hint : {"center_x" : .5, "center_y" : .38}
        on_press : root.manager.current = "homepage"