#: import popup popups.popup
#: import add_product popups.add_product
#: import dropup popups.dropup
#: import clear homepage.clear

MDScreen:
    name : "products"
    md_bg_color : 202/255, 150/255, 92/255, .6

    canvas.before:
        Color:
            rgba : 1, 1, 1, .3
        Rectangle:
            size : self.size
            pos : self.pos
            source : "images/10.png"

    MDIconButton:
        icon : "arrow-left-bold"
        theme_text_color : "Custom"
        user_font_size : "30sp"
        pos_hint : {"center_x" : .07, "center_y" : .92}
        on_press : root.manager.current = "login"

    MDLabel:
        text : "Back"
        font_size : "25sp"
        theme_text_color : "Custom"
        text_color : "black"
        font_name : "fonts/Poppins-SemiBold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .19, "center_y" : .922}

    MDLabel:
        text : "Products Add"
        font_size : "27sp"
        theme_text_color : "Custom"
        text_color : "black"
        font_name : "fonts/Poppins-SemiBold.ttf"
        halign : "center"
        pos_hint : {"center_x" : .75, "center_y" : .922}


    MDCard:
        size_hint : .35, .35
        pos_hint : {"center_x" : .25, "center_y" : .58}

        FitImage:
            id : prod_image
            size : self.size
            pos : self.pos
            source : "images/13.jpg"

    MDTextField:
        id : type
        size_hint : .27, .08
        mode : "rectangle"
        disabled : True
        pos_hint : {"center_x" : .59, "center_y" : .75}
        hint_text : "Product Type"
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        line_color_focus : "black"
        hint_text_color_focus : "black"
        text_color_focus : "black"

    MDIconButton:
        id : type_button
        icon : "arrow-down-circle"
        pos_hint : {"center_x" : .87, "center_y" : .74}
        theme_text_color: "Custom"
        user_font_size : "35sp"
        on_press : dropup(app)

    MDTextField:
        id : name
        size_hint : .5, .1
        mode : "rectangle"
        pos_hint : {"center_x" : .7, "center_y" : .64}
        hint_text : "Product Name"
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        theme_text_color : "Custom"
        line_color_focus : "black"
        hint_text_color_focus : "black"
        text_color_focus : "black"

    MDTextField:
        id : details
        size_hint : .5, .1
        mode : "rectangle"
        pos_hint : {"center_x" : .7, "center_y" : .54}
        hint_text : "Product Details"
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        line_color_focus : "black"
        hint_text_color_focus : "black"
        text_color_focus : "black"

    MDTextField:
        id : price
        size_hint : .5, .1
        mode : "rectangle"
        pos_hint : {"center_x" : .7, "center_y" : .44}
        hint_text : "Product Price"
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        line_color_focus : "black"
        hint_text_color_focus : "black"
        text_color_focus : "black"

    MDTextField:
        id : quantity
        size_hint : .5, .15
        mode : "rectangle"
        pos_hint : {"center_x" : .7, "center_y" : .31}
        hint_text : "Product Quantity"
        font_name : "fonts/Poppins-SemiBold.ttf"
        theme_text_color : "Custom"
        line_color_focus : "black"
        hint_text_color_focus : "black"
        text_color_focus : "black"

    MDRoundFlatButton:
        text : "Select Picture"
        size_hint : .34, .07
        pos_hint : {"center_x" : .25, "center_y" : .35}
        md_bg_color : 0, 0, 0, .8
        on_press : popup(app)

    MDRaisedButton:
        text : "Add Product"
        size_hint : .5, .1
        pos_hint : {"center_x" : .5, "center_y" : .13}
        on_press :
            add_product(type, name, details, price, quantity)
            clear(app)

